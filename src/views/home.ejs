            <div class="mt-4">
                <a href="#collections" class="btn btn-light btn-lg px-5 me-3">Explore Lookbook</a>
                <a href="#shop" class="btn btn-outline-light btn-lg px-5">Shop Now</a>
            </div>
        </div>
