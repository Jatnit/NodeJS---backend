<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | Đăng nhập</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .auth-card {
            width: 100%;
            max-width: 420px;
            border-radius: 18px;
            padding: 40px;
            background: var(--card-bg);
            color: var(--app-text);
        }

        .brand-title {
            letter-spacing: 0.4em;
            font-size: 0.8rem;
            color: #b48b57;
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>
        <main class="site-main">
            <div class="auth-wrapper">
                <div class="auth-card">
                    <p class="brand-title text-uppercase mb-2">Moda Studio</p>
                    <h2 class="fw-bold">Chào mừng trở lại</h2>
                    <p class="text-muted mb-4">Đăng nhập để quản lý tài khoản và bộ sưu tập của bạn.</p>

                    <% if (successMessage) { %>
                        <div class="alert alert-success">
                            <%= successMessage %>
                        </div>
                        <% } %>

                            <% if (errorMessage) { %>
                                <div class="alert alert-danger">
                                    <%= errorMessage %>
                                </div>
                                <% } %>

                                    <form action="/signin" method="POST">
                                        <div class="mb-3">
                                            <label for="email" class="form-label">Email</label>
                                            <input type="email" class="form-control" id="email" name="email"
                                                value="<%= formData && formData.email ? formData.email : '' %>" required
                                                autofocus>
                                        </div>
                                        <div class="mb-4">
                                            <label for="password" class="form-label">Mật khẩu</label>
                                            <input type="password" class="form-control" id="password" name="password"
                                                required>
                                        </div>
                                        <button type="submit" class="btn btn-dark w-100 py-2">Đăng nhập</button>
                                    </form>

                                    <p class="text-center text-muted mt-4 mb-0">
                                        Chưa có tài khoản?
                                        <a href="/signup" class="text-decoration-none">Đăng ký ngay</a>
                                    </p>
                                    <div class="text-center mt-3">
                                        <a href="/" class="text-decoration-none small text-muted">← Quay lại trang
                                            chủ</a>
                                    </div>
                </div>
            </div>
        </main>
        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>