<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | <%= product ? product.name : "Product Detail" %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        body {
            background-color: #f5f5f5;
            color: #000;
        }

        .detail-layout {
            display: grid;
            grid-template-columns: 1fr;
            gap: 3rem;
            padding: 2rem 0 4rem;
        }

        @media (min-width: 992px) {
            .detail-layout {
                grid-template-columns: 1fr 1fr;
            }

            .gallery-column {
                position: sticky;
                top: 110px;
                height: calc(100vh - 140px);
            }
        }

        .gallery-card {
            height: 100%;
            border-radius: 6px;
            overflow: hidden;
            background: #fff;
            box-shadow: 0 45px 90px rgba(0, 0, 0, 0.16);
        }

        .gallery-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .pill-group {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .pill {
            border-radius: 4px;
            border: 1px solid #d0d0d0;
            padding: 0.55rem 1.75rem;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            background: #fff;
        }

        .pill.selected {
            background: #111;
            color: #fff;
            border-color: #111;
        }

        .pill.disabled {
            opacity: 0.4;
            cursor: not-allowed;
            text-decoration: line-through;
        }

        .price-label {
            font-family: "Helvetica Neue", Arial, sans-serif;
            font-size: 1.8rem;
            color: #000;
        }

        .product-title {
            font-family: "Playfair Display", "Times New Roman", serif;
            font-size: 2.7rem;
            letter-spacing: 0.08em;
        }

        .btn-edgy {
            border-radius: 4px;
            transition: all 0.3s ease-in-out;
        }

        .btn-edgy:hover {
            transform: translateY(-2px);
            filter: brightness(0.92);
        }

        .mobile-cart-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: #000;
            color: #fff;
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: space-between;
            gap: 1rem;
            z-index: 1040;
        }

        .mobile-cart-bar button {
            flex: 1;
        }

        @media (min-width: 992px) {
            .mobile-cart-bar {
                display: none;
            }
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>

        <main class="site-main">
            <div class="container">
                <% if (errorMessage) { %>
                    <div class="alert alert-danger text-center">
                        <%= errorMessage %>
                    </div>
                    <% } %>

                        <% if (product) { %>
                            <div class="detail-layout" id="productDetailRoot"
                                data-base-price="<%= Number(product ? product.basePrice || 0 : 0) %>">
                                <div class="gallery-column">
                                    <div class="gallery-card">
                                        <img src="<%= product.thumbnailUrl || 'https://images.unsplash.com/photo-1503341455253-b2e723bb3dbb?auto=format&fit=crop&w=1200&q=80' %>"
                                            alt="<%= product.name %>">
                                    </div>
                                </div>
                                <div class="info-column">
                                    <p class="text-uppercase text-muted mb-1">Moda Studio</p>
                                    <h1 class="product-title mb-3">
                                        <%= product.name %>
                                    </h1>
                                    <p class="price-label mb-4" id="skuPrice">
                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                            }).format(product.basePrice || 0) %>
                                    </p>

                                    <% attributeGroups.forEach(function(group) { %>
                                        <div class="mb-4">
                                            <p class="text-uppercase text-muted small mb-2">
                                                <%= group.attributeName %>
                                            </p>
                                            <div class="pill-group" data-attribute-id="<%= group.attributeId %>">
                                                <% group.values.forEach(function(value) { %>
                                                    <button type="button" class="pill"
                                                        data-attribute-id="<%= group.attributeId %>"
                                                        data-attribute-value-id="<%= value.id %>">
                                                        <%= value.value %>
                                                    </button>
                                                    <% }); %>
                                            </div>
                                        </div>
                                        <% }); %>

                                            <input type="hidden" id="selectedSkuId">
                                            <p id="stockStatus" class="text-muted mb-4">Chọn biến thể để xem tồn kho.
                                            </p>

                                            <button class="btn btn-dark btn-edgy w-100 mt-4" id="addToCartBtnDesktop"
                                                disabled>Thêm
                                                vào giỏ</button>
                                            <div class="toast align-items-center text-bg-dark border-0 position-fixed bottom-0 end-0 m-3"
                                                role="alert" id="selectionToast">
                                                <div class="d-flex">
                                                    <div class="toast-body">
                                                        Please select options
                                                    </div>
                                                    <button type="button" class="btn-close btn-close-white me-2 m-auto"
                                                        data-bs-dismiss="toast"></button>
                                                </div>
                                            </div>
                                </div>
                            </div>
                            <% } %>
            </div>
        </main>

        <% if (product) { %>
            <div class="mobile-cart-bar">
                <div>
                    <p class="mb-0 text-uppercase" style="letter-spacing: 0.25em; font-size: 0.7rem;">Subtotal</p>
                    <p class="mb-0 fw-semibold" id="mobileSubtotal">
                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                            }).format(product.basePrice || 0) %>
                    </p>
                </div>
                <button class="btn btn-light btn-edgy" id="addToCartBtnMobile" disabled>Thêm vào giỏ</button>
            </div>
            <% } %>

                <%- include('partials/footer') %>

                    <% if (product) { %>
                        <script id="attribute-data" type="application/json">
                    <%- JSON.stringify(attributeGroups || []) %>
                </script>
                        <script id="sku-data" type="application/json">
                    <%- JSON.stringify(skuOptions || []) %>
                </script>
                        <% } %>

                            <script>
                                const attributeGroups = (() => {
                                    const el = document.getElementById("attribute-data");
                                    return el ? JSON.parse(el.textContent || "[]") : [];
                                })();
                                const skuOptions = (() => {
                                    const el = document.getElementById("sku-data");
                                    return el ? JSON.parse(el.textContent || "[]") : [];
                                })();

                                (function () {
                                    const selectedValues = {};
                                    const rootEl = document.getElementById("productDetailRoot");
                                    const basePrice = Number(rootEl?.dataset.basePrice || 0);
                                    const pills = document.querySelectorAll(".pill-group .pill");
                                    const skuPriceEl = document.getElementById("skuPrice");
                                    const stockStatusEl = document.getElementById("stockStatus");
                                    const desktopBtn = document.getElementById("addToCartBtnDesktop");
                                    const mobileBtn = document.getElementById("addToCartBtnMobile");
                                    const cartButtons = [desktopBtn, mobileBtn].filter(Boolean);
                                    const hiddenSkuInput = document.getElementById("selectedSkuId");
                                    const mobileSubtotal = document.getElementById("mobileSubtotal");
                                    const currencyFormatter = new Intl.NumberFormat("vi-VN", {
                                        style: "currency",
                                        currency: "VND",
                                    });

                                    const updatePriceDisplay = (price) => {
                                        if (!skuPriceEl) return;
                                        skuPriceEl.textContent = currencyFormatter.format(price || 0);
                                    };

                                    const isValueAvailable = (attributeId, valueId) => {
                                        const tentativeSelection = { ...selectedValues, [attributeId]: valueId };
                                        return skuOptions.some((sku) => {
                                            if (!sku.attributeValueIds.includes(Number(valueId))) {
                                                return false;
                                            }
                                            return Object.entries(tentativeSelection).every(
                                                ([attrId, attrValueId]) =>
                                                    sku.attributeValueIds.includes(Number(attrValueId))
                                            );
                                        });
                                    };

                                    const refreshPills = () => {
                                        pills.forEach((pill) => {
                                            const attributeId = Number(pill.dataset.attributeId);
                                            const valueId = Number(pill.dataset.attributeValueId);
                                            const selectedValue = selectedValues[attributeId];
                                            const selectable = isValueAvailable(attributeId, valueId);

                                            pill.classList.toggle(
                                                "selected",
                                                selectedValue && Number(selectedValue) === valueId
                                            );
                                            pill.classList.toggle("disabled", !selectable);
                                            pill.disabled = !selectable;
                                        });
                                    };

                                    const findMatchingSku = () => {
                                        if (attributeGroups.length === 0) {
                                            return skuOptions[0] || null;
                                        }
                                        if (Object.keys(selectedValues).length !== attributeGroups.length) {
                                            return null;
                                        }
                                        return skuOptions.find((sku) =>
                                            attributeGroups.every((group) => {
                                                const selectedValue = selectedValues[group.attributeId];
                                                return (
                                                    selectedValue &&
                                                    sku.attributeValueIds.includes(Number(selectedValue))
                                                );
                                            })
                                        );
                                    };

                                    const resetState = () => {
                                        stockStatusEl.textContent = attributeGroups.length
                                            ? "Chọn biến thể để xem tồn kho."
                                            : skuOptions.length && skuOptions[0].stockQuantity > 0
                                                ? `Còn ${skuOptions[0].stockQuantity} sản phẩm`
                                                : "Hết hàng";
                                        const disabled =
                                            !skuOptions.length || skuOptions[0].stockQuantity <= 0;
                                        cartButtons.forEach((btn) => {
                                            btn.disabled = disabled;
                                            btn.textContent = disabled ? "Hết hàng" : "Thêm vào giỏ";
                                        });
                                        hiddenSkuInput.value = disabled ? "" : skuOptions[0]?.id || "";
                                        if (mobileSubtotal) {
                                            mobileSubtotal.textContent = currencyFormatter.format(
                                                skuOptions[0]?.price || basePrice
                                            );
                                        }
                                    };

                                    const handleSelectionChange = () => {
                                        const matchedSku = findMatchingSku();
                                        if (matchedSku) {
                                            updatePriceDisplay(matchedSku.price);
                                            if (mobileSubtotal) {
                                                mobileSubtotal.textContent = currencyFormatter.format(matchedSku.price || 0);
                                            }
                                            hiddenSkuInput.value = matchedSku.id;
                                            if (matchedSku.stockQuantity > 0) {
                                                stockStatusEl.textContent = `Còn ${matchedSku.stockQuantity} sản phẩm`;
                                                cartButtons.forEach((btn) => {
                                                    btn.disabled = false;
                                                    btn.textContent = "Thêm vào giỏ";
                                                });
                                            } else {
                                                stockStatusEl.textContent = "Hết hàng";
                                                cartButtons.forEach((btn) => {
                                                    btn.disabled = true;
                                                    btn.textContent = "Hết hàng";
                                                });
                                            }
                                        } else {
                                            updatePriceDisplay(basePrice);
                                            if (mobileSubtotal) {
                                                mobileSubtotal.textContent = currencyFormatter.format(basePrice);
                                            }
                                            stockStatusEl.textContent = "Chọn biến thể để xem tồn kho.";
                                            cartButtons.forEach((btn) => {
                                                btn.disabled = true;
                                                btn.textContent = "Thêm vào giỏ";
                                            });
                                            hiddenSkuInput.value = "";
                                        }
                                    };

                                    const onPillClick = (event) => {
                                        const pill = event.currentTarget;
                                        if (pill.classList.contains("disabled")) return;
                                        const attributeId = Number(pill.dataset.attributeId);
                                        const valueId = Number(pill.dataset.attributeValueId);

                                        if (selectedValues[attributeId] === valueId) {
                                            delete selectedValues[attributeId];
                                        } else {
                                            selectedValues[attributeId] = valueId;
                                        }

                                        refreshPills();
                                        handleSelectionChange();
                                    };

                                    const toastEl = document.getElementById("selectionToast");
                                    const toastInstance = toastEl ? new bootstrap.Toast(toastEl) : null;

                                    const handleAddToCart = async () => {
                                        const skuId = hiddenSkuInput.value;
                                        if (!skuId) {
                                            toastInstance && toastInstance.show();
                                            return;
                                        }
                                        try {
                                            const response = await fetch("/cart/add", {
                                                method: "POST",
                                                headers: { "Content-Type": "application/json" },
                                                body: JSON.stringify({ skuId }),
                                            });
                                            const data = await response.json();
                                            if (!data.success) {
                                                alert(data.message || "Unable to add to cart.");
                                                return;
                                            }
                                            if (data.cart) {
                                                if (
                                                    window.__CART_DRAWER__ &&
                                                    typeof window.__CART_DRAWER__.update === "function"
                                                ) {
                                                    window.__CART_DRAWER__.update(data.cart);
                                                }
                                                if (typeof window.dispatchEvent === "function") {
                                                    window.dispatchEvent(
                                                        new CustomEvent("cart:updated", { detail: data.cart })
                                                    );
                                                    window.dispatchEvent(new CustomEvent("cart:open"));
                                                }
                                            }
                                        } catch (error) {
                                            console.error(error);
                                            alert("Unable to add to cart.");
                                        }
                                    };

                                    if (pills.length) {
                                        pills.forEach((pill) => pill.addEventListener("click", onPillClick));
                                        refreshPills();
                                        handleSelectionChange();
                                    } else {
                                        resetState();
                                    }

                                    cartButtons.forEach((btn) => {
                                        btn.addEventListener("click", handleAddToCart);
                                    });
                                })();
                            </script>

</body>

</html>