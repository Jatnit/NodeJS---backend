<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | Chi tiết đơn hàng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .order-hero {
            border-radius: 28px;
            padding: 2.5rem;
            background: linear-gradient(135deg, #111, #2f2f2f);
            color: #fff;
            box-shadow: 0 35px 80px rgba(0, 0, 0, 0.4);
        }

        .order-pill {
            text-transform: uppercase;
            letter-spacing: 0.4em;
            font-size: 0.7rem;
            opacity: 0.75;
        }

        .detail-card {
            border-radius: 24px;
            border: 1px solid var(--border-color, rgba(0, 0, 0, 0.08));
            background: var(--card-bg, #fff);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.08);
        }

        .items-table thead {
            background: rgba(0, 0, 0, 0.04);
            text-transform: uppercase;
            letter-spacing: 0.2em;
            font-size: 0.75rem;
        }

        .items-table td {
            vertical-align: middle;
        }

        .status-tag {
            border-radius: 999px;
            padding: 0.25rem 1rem;
            font-weight: 600;
            font-size: 0.85rem;
            display: inline-block;
        }

        .status-tag.success {
            background: rgba(16, 185, 129, 0.18);
            color: #059669;
        }

        .status-tag.info {
            background: rgba(59, 130, 246, 0.2);
            color: #1d4ed8;
        }

        .status-tag.warning {
            background: rgba(251, 191, 36, 0.25);
            color: #b45309;
        }

        .status-tag.danger {
            background: rgba(239, 68, 68, 0.2);
            color: #b91c1c;
        }

        .timeline {
            display: grid;
            grid-template-columns: repeat(4, minmax(0, 1fr));
            gap: 1rem;
            margin-top: 1.25rem;
        }

        .timeline-node {
            text-align: center;
            font-size: 0.85rem;
            color: #94a3b8;
            position: relative;
        }

        .timeline-node::before {
            content: "";
            position: absolute;
            top: 14px;
            left: -50%;
            right: 50%;
            height: 2px;
            background: rgba(148, 163, 184, 0.6);
            z-index: 1;
        }

        .timeline-node:first-child::before {
            display: none;
        }

        .timeline-dot {
            width: 18px;
            height: 18px;
            border-radius: 50%;
            margin: 0 auto 6px;
            border: 2px solid rgba(148, 163, 184, 0.8);
            background: var(--card-bg, #fff);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            z-index: 2;
        }

        .timeline-node.completed {
            color: #0f172a;
        }

        .timeline-node.completed .timeline-dot {
            background: #0f172a;
            border-color: #0f172a;
        }

        .timeline-node.active .timeline-dot {
            border-color: #0f172a;
        }

        .timeline-node.is-cancelled {
            color: #b91c1c;
        }

        .timeline-node.is-cancelled .timeline-dot {
            border-color: #b91c1c;
        }

        .breakdown-list li {
            display: flex;
            justify-content: space-between;
            margin-bottom: 0.4rem;
        }

        .breakdown-list li span:first-child {
            color: #6b7280;
        }

        .breakdown-list li.total {
            font-weight: 700;
            font-size: 1.1rem;
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>
        <main class="site-main py-5">
            <div class="container">
                <% if (errorMessage) { %>
                    <div class="alert alert-warning">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <% if (successMessage) { %>
                            <div class="alert alert-success">
                                <%= successMessage %>
                            </div>
                            <% } %>

                                <% if (!orderSummary) { %>
                                    <div class="text-center py-5">
                                        <p class="text-muted mb-3">Không tìm thấy thông tin đơn hàng.</p>
                                        <a href="/user/profile/<%= (currentUser && currentUser.id) || '' %>"
                                            class="btn btn-dark">
                                            Quay lại hồ sơ
                                        </a>
                                    </div>
                                    <% } else { %>
                                        <section class="order-hero mb-5">
                                            <div class="d-flex flex-column flex-lg-row justify-content-between gap-3">
                                                <div>
                                                    <p class="order-pill mb-2">Order Detail</p>
                                                    <h1 class="fw-semibold mb-1">
                                                        Đơn <%= orderSummary.code %>
                                                    </h1>
                                                    <p class="mb-0 text-white-50">
                                                        Ngày đặt:
                                                        <%= orderSummary.orderDate ? new
                                                            Date(orderSummary.orderDate).toLocaleDateString('vi-VN', {
                                                            day: '2-digit' , month: '2-digit' , year: 'numeric' })
                                                            : "Chưa cập nhật" %>
                                                    </p>
                                                </div>
                                                <div class="text-lg-end">
                                                    <span class="status-tag <%= orderSummary.statusBadge %>">
                                                        <%= orderSummary.status %>
                                                    </span>
                                                    <p class="mb-1 mt-3">
                                                        Phương thức: <strong>
                                                            <%= orderSummary.paymentMethod %>
                                                        </strong>
                                                    </p>
                                                    <small class="text-white-50">
                                                        <%= orderSummary.isPaid ? "Đã thanh toán" : "Chưa thanh toán" %>
                                                    </small>
                                                </div>
                                            </div>
                                        </section>

                                        <div class="row g-4">
                                            <div class="col-lg-7">
                                                <div class="detail-card p-4 h-100">
                                                    <h5 class="text-uppercase text-muted"
                                                        style="letter-spacing: 0.25em;">
                                                        Sản phẩm
                                                    </h5>
                                                    <% if (!items.length) { %>
                                                        <p class="text-muted mt-3 mb-0">Không có sản phẩm nào trong đơn.
                                                        </p>
                                                        <% } else { %>
                                                            <div class="table-responsive mt-3">
                                                                <table class="table items-table align-middle">
                                                                    <thead>
                                                                        <tr>
                                                                            <th>Sản phẩm</th>
                                                                            <th class="text-end">Đơn giá</th>
                                                                            <th class="text-center">SL</th>
                                                                            <th class="text-end">Thành tiền</th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody>
                                                                        <% items.forEach(function(item){ %>
                                                                            <tr>
                                                                                <td>
                                                                                    <strong>
                                                                                        <%= item.name %>
                                                                                    </strong>
                                                                                    <% if (item.productSkuId) { %>
                                                                                        <br>
                                                                                        <small class="text-muted">SKU:
                                                                                            <%= item.productSkuId %>
                                                                                        </small>
                                                                                        <% } %>
                                                                                </td>
                                                                                <td class="text-end">
                                                                                    <%= item.unitPrice.toLocaleString('vi-VN',
                                                                                        { style: 'currency' ,
                                                                                        currency: 'VND' }) %>
                                                                                </td>
                                                                                <td class="text-center">
                                                                                    <%= item.quantity %>
                                                                                </td>
                                                                                <td class="text-end">
                                                                                    <%= item.lineTotal.toLocaleString('vi-VN',
                                                                                        { style: 'currency' ,
                                                                                        currency: 'VND' }) %>
                                                                                </td>
                                                                            </tr>
                                                                            <% }) %>
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                            <% } %>
                                                </div>
                                            </div>
                                            <div class="col-lg-5">
                                                <div class="detail-card p-4 mb-4">
                                                    <h5 class="mb-3">Thông tin giao hàng</h5>
                                                    <p class="mb-1 fw-semibold">
                                                        <%= shippingInfo.name %>
                                                    </p>
                                                    <p class="mb-1 text-muted">Số điện thoại: <%= shippingInfo.phone %>
                                                    </p>
                                                    <p class="mb-0 text-muted">
                                                        <%= shippingInfo.address %>
                                                    </p>
                                                    <% if (orderSummary.note) { %>
                                                        <div class="mt-3">
                                                            <small class="text-muted text-uppercase">Ghi chú</small>
                                                            <p class="mb-0">
                                                                <%= orderSummary.note %>
                                                            </p>
                                                        </div>
                                                        <% } %>
                                                </div>

                                                <div class="detail-card p-4 mb-4">
                                                    <h5 class="mb-3">Tiến trình đơn hàng</h5>
                                                    <div class="timeline">
                                                        <% (timeline || []).forEach(function(step){ %>
                                                            <div
                                                                class="timeline-node
                                                                <%= step.isCompleted ? 'completed' : '' %>
                                                                <%= step.isActive ? 'active' : '' %>
                                                                <%= orderSummary.status==='Đã hủy' ? 'is-cancelled' : '' %>">
                                                                <div class="timeline-dot"></div>
                                                                <div class="small">
                                                                    <%= step.label %>
                                                                </div>
                                                            </div>
                                                            <% }) %>
                                                    </div>
                                                </div>

                                                <div class="detail-card p-4">
                                                    <h5 class="mb-3">Tổng kết thanh toán</h5>
                                                    <ul class="list-unstyled breakdown-list mb-4">
                                                        <li>
                                                            <span>Tiền hàng</span>
                                                            <span>
                                                                <%= breakdown.itemsTotal.toLocaleString('vi-VN', {
                                                                    style: 'currency' , currency: 'VND' }) %>
                                                            </span>
                                                        </li>
                                                        <li>
                                                            <span>Giảm giá</span>
                                                            <span>-<%= breakdown.discount.toLocaleString('vi-VN', {
                                                                    style: 'currency' , currency: 'VND' }) %></span>
                                                        </li>
                                                        <li>
                                                            <span>Phí vận chuyển</span>
                                                            <span>
                                                                <%= breakdown.shippingFee.toLocaleString('vi-VN', {
                                                                    style: 'currency' , currency: 'VND' }) %>
                                                            </span>
                                                        </li>
                                                        <li class="total">
                                                            <span>Tổng thanh toán</span>
                                                            <span>
                                                                <%= breakdown.grandTotal.toLocaleString('vi-VN', {
                                                                    style: 'currency' , currency: 'VND' }) %>
                                                            </span>
                                                        </li>
                                                    </ul>
                                                    <% if (canCancel && cancelAction) { %>
                                                        <form action="<%= cancelAction %>" method="POST"
                                                            onsubmit="return confirm('Bạn chắc chắn muốn hủy đơn hàng này?');">
                                                            <button type="submit" class="btn btn-outline-danger w-100">
                                                                Yêu cầu hủy đơn
                                                            </button>
                                                        </form>
                                                        <% } else { %>
                                                            <p class="text-muted fst-italic mb-0">
                                                                Không thể hủy đơn trong giai đoạn hiện tại.
                                                            </p>
                                                            <% } %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="mt-4">
                                            <a href="/user/profile/<%= (currentUser && currentUser.id) || '' %>"
                                                class="btn btn-outline-dark">
                                                Quay lại trang hồ sơ
                                            </a>
                                        </div>
                                        <% } %>
            </div>
        </main>
        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>