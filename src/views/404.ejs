<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | 404</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .page-404 {
            min-height: calc(100vh - 140px);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 3rem 1rem 5rem;
            background: #030303;
            color: #f5f5f5;
            position: relative;
            overflow: hidden;
        }

        .page-404::after {
            content: "";
            position: absolute;
            inset: 0;
            background: radial-gradient(circle at 30% 20%, rgba(255, 255, 255, 0.08), transparent 55%),
                radial-gradient(circle at 70% 70%, rgba(255, 255, 255, 0.05), transparent 60%);
            mix-blend-mode: screen;
            pointer-events: none;
        }

        .page-404__shell {
            width: min(1100px, 100%);
            z-index: 1;
        }

        .page-404__stack {
            position: relative;
            margin: 0 auto 2rem;
            padding: 3rem 0;
        }

        .page-404__panel {
            display: grid;
            grid-template-columns: repeat(3, minmax(0, 1fr));
            gap: 1.5rem;
        }

        .page-404__panel-column {
            height: 280px;
            border: 1px solid rgba(255, 255, 255, 0.15);
            border-radius: 2.5rem;
            position: relative;
            overflow: hidden;
            background: linear-gradient(180deg, rgba(255, 255, 255, 0.1), transparent);
            backdrop-filter: blur(8px);
            animation: float 6s ease-in-out infinite;
        }

        .page-404__panel-column:nth-child(2) {
            height: 340px;
            animation-delay: 0.6s;
        }

        .page-404__panel-column:nth-child(3) {
            animation-delay: 1.2s;
        }

        .page-404__panel-column::before {
            content: "";
            position: absolute;
            inset: -60%;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.35), transparent 55%);
            animation: shift 8s linear infinite;
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0px);
            }

            50% {
                transform: translateY(-12px);
            }
        }

        @keyframes shift {
            0% {
                transform: translate(-20%, -10%);
            }

            100% {
                transform: translate(20%, 10%);
            }
        }

        .page-404__marquee {
            display: flex;
            overflow: hidden;
            gap: 2rem;
            margin: 0 auto;
            opacity: 0.8;
        }

        .page-404__marquee--bottom {
            margin-top: 1.5rem;
        }

        .page-404__marquee-inner {
            display: flex;
            gap: 2rem;
            animation: marquee 16s linear infinite;
            white-space: nowrap;
            font-size: 0.95rem;
            letter-spacing: 0.35em;
            text-transform: uppercase;
        }

        .page-404__marquee--reverse .page-404__marquee-inner {
            animation-direction: reverse;
        }

        .page-404__marquee-text {
            display: inline-flex;
            gap: 0.5rem;
            color: rgba(255, 255, 255, 0.7);
        }

        .page-404__marquee-text span {
            color: rgba(255, 255, 255, 0.4);
        }

        @keyframes marquee {
            0% {
                transform: translateX(0);
            }

            100% {
                transform: translateX(-50%);
            }
        }

        .page-404__content {
            text-align: center;
            margin: 3rem auto 0;
            max-width: 720px;
        }

        .page-404__label {
            letter-spacing: 0.5em;
            text-transform: uppercase;
            font-size: 0.65rem;
            color: rgba(255, 255, 255, 0.6);
        }

        .page-404__subtitle {
            letter-spacing: 0.35em;
            text-transform: uppercase;
            font-size: 0.8rem;
            color: rgba(255, 255, 255, 0.7);
        }

        .page-404__title {
            font-size: clamp(3.5rem, 12vw, 7rem);
            font-weight: 600;
            margin: 1rem 0 0.5rem;
        }

        .page-404__divider {
            width: 80px;
            height: 1px;
            background: rgba(255, 255, 255, 0.3);
            margin: 1rem auto 2rem;
        }

        .page-404__cta {
            letter-spacing: 0.25em;
        }

        @media (max-width: 992px) {
            .page-404__panel {
                grid-template-columns: repeat(2, minmax(0, 1fr));
            }
        }

        @media (max-width: 768px) {
            .page-404__panel {
                grid-template-columns: 1fr;
            }

            .page-404__panel-column {
                height: 200px;
            }
        }
    </style>
</head>

