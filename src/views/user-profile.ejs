<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | Thông tin cá nhân</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .pill {
            letter-spacing: 0.3em;
            color: #b48b57;
            font-size: 0.75rem;
            text-transform: uppercase;
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>
        <main class="site-main">
            <div class="profile-wrapper">
                <div class="profile-card">
                    <p class="pill mb-2">Member Profile</p>
                    <h2 class="fw-bold">Thông tin tài khoản</h2>
                    <p class="text-muted">Quản lý thông tin cơ bản của bạn tại Moda Studio.</p>

                    <% if (errorMessage) { %>
                        <div class="alert alert-danger mt-4">
                            <%= errorMessage %>
                        </div>
                        <% } %>

                            <% if (user) { %>
                                <div class="mt-4">
                                    <div class="mb-3">
                                        <label class="text-uppercase text-muted small">Tên hiển thị</label>
                                        <p class="fs-5 mb-0">
                                            <%= user.username %>
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-uppercase text-muted small">Email</label>
                                        <p class="fs-5 mb-0">
                                            <%= user.email %>
                                        </p>
                                    </div>
                                    <div class="mb-3">
                                        <label class="text-uppercase text-muted small">Vai trò</label>
                                        <p class="fs-5 mb-0">
                                            <% if (String(user.role)==="1" ) { %>
                                                Admin
                                                <% } else { %>
                                                    Thành viên
                                                    <% } %>
                                        </p>
                                    </div>
                                    <div class="text-end">
                                        <a href="/" class="btn btn-outline-dark">Về trang chủ</a>
                                    </div>
                                </div>
                                <% } %>
                </div>
            </div>
        </main>
        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>