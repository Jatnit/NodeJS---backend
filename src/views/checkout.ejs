<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | Thanh toán</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --color-slate: #6c737e;
            --color-steel: #7393a7;
            --color-mist: #b5cfd8;
            --color-cloud: #e8ecf1;
            --font-display: 'Cormorant Garamond', Georgia, serif;
            --font-body: 'Inter', sans-serif;
        }

        body {
            font-family: var(--font-body);
            background-color: var(--color-cloud);
        }

        body.theme-dark {
            background-color: var(--app-bg);
        }

        .page-header {
            text-align: center;
            padding: 2rem 0;
            margin-bottom: 1rem;
        }

        .page-header h1 {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 500;
            color: var(--color-slate);
        }

        .checkout-layout {
            display: grid;
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        @media (min-width: 992px) {
            .checkout-layout {
                grid-template-columns: 3fr 2fr;
            }

            .summary-column {
                position: sticky;
                top: 100px;
                height: fit-content;
            }
        }

        .section-card {
            background: #fff;
            border-radius: 24px;
            padding: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 10px 40px rgba(108, 115, 126, 0.08);
            border: 1px solid rgba(108, 115, 126, 0.08);
        }

        body.theme-dark .section-card {
            background: var(--card-bg);
            border-color: rgba(255, 255, 255, 0.08);
        }

        .section-title {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--color-slate);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }

        .section-title i {
            color: var(--color-steel);
        }

        .form-label {
            font-size: 0.85rem;
            font-weight: 600;
            color: var(--color-slate);
            margin-bottom: 0.5rem;
        }

        .form-control,
        .form-control:focus {
            border-radius: 12px;
            border: 2px solid var(--color-cloud);
            padding: 14px 16px;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        body.theme-dark .form-control {
            background: rgba(255, 255, 255, 0.05);
            border-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

        .form-control:focus {
            border-color: var(--color-steel);
            box-shadow: 0 0 0 4px rgba(115, 147, 167, 0.15);
        }

        .address-list .list-group-item {
            border-radius: 14px;
            border: 2px solid var(--color-cloud);
            margin-bottom: 0.75rem;
            padding: 1rem 1.25rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .address-list .list-group-item:hover,
        .address-list .list-group-item:has(input:checked) {
            border-color: var(--color-steel);
            background: rgba(115, 147, 167, 0.05);
        }

        .payment-options {
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .payment-card {
            border: 2px solid var(--color-cloud);
            border-radius: 16px;
            padding: 1.25rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .payment-card:hover,
        .payment-card.selected {
            border-color: var(--color-steel);
        }

        .payment-card.selected {
            background: var(--color-slate);
            color: #fff;
        }

        .payment-card.selected .text-muted {
            color: rgba(255, 255, 255, 0.7) !important;
        }

        .payment-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            background: var(--color-cloud);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            color: var(--color-slate);
        }

        .payment-card.selected .payment-icon {
            background: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        .qr-card {
            border: 2px dashed var(--color-mist);
            border-radius: 20px;
            padding: 1.5rem;
            background: rgba(181, 207, 216, 0.1);
            margin-top: 1rem;
        }

        .qr-card img {
            max-width: 200px;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .summary-card {
            background: #fff;
            border-radius: 24px;
            padding: 2rem;
            box-shadow: 0 20px 50px rgba(108, 115, 126, 0.12);
        }

        body.theme-dark .summary-card {
            background: var(--card-bg);
        }

        .summary-title {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--color-slate);
            margin-bottom: 1.5rem;
        }

        .cart-item {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            padding: 1rem 0;
            border-bottom: 1px solid var(--color-cloud);
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .cart-item-name {
            font-weight: 600;
            color: var(--color-slate);
            margin-bottom: 0.25rem;
        }

        .cart-item-variant {
            font-size: 0.85rem;
            color: var(--color-steel);
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0.75rem 0;
        }

        .summary-row.total {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--color-slate);
            border-top: 2px solid var(--color-cloud);
            margin-top: 0.5rem;
            padding-top: 1rem;
        }

        .btn-checkout {
            width: 100%;
            padding: 1.1rem;
            font-size: 1rem;
            font-weight: 600;
            border-radius: 14px;
            border: none;
            background: var(--color-slate);
            color: #fff;
            transition: all 0.4s ease;
            margin-top: 1.5rem;
        }

        .btn-checkout:hover {
            background: var(--color-steel);
            transform: translateY(-2px);
            box-shadow: 0 12px 35px rgba(108, 115, 126, 0.3);
        }

        .alert {
            border-radius: 14px;
            border: none;
        }

        .empty-cart {
            text-align: center;
            padding: 4rem 2rem;
        }

        .empty-cart i {
            font-size: 4rem;
            color: var(--color-mist);
            margin-bottom: 1rem;
        }

        .empty-cart h3 {
            font-family: var(--font-display);
            color: var(--color-slate);
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>

        <main class="site-main">
            <div class="container py-4">
                <div class="page-header">
                    <h1><i class="bi bi-bag-check me-3"></i>Thanh toán</h1>
                </div>

                <% if (errorMessage) { %>
                    <div class="alert alert-danger text-center">
                        <%= errorMessage %>
                    </div>
                    <% } %>
                        <div id="checkoutFeedback"></div>

                        <% if (!cart || !cart.items || !cart.items.length) { %>
                            <div class="section-card empty-cart">
                                <i class="bi bi-cart-x"></i>
                                <h3>Giỏ hàng trống</h3>
                                <p class="text-muted">Bạn chưa có sản phẩm nào trong giỏ hàng</p>
                                <a href="/products" class="btn-checkout"
                                    style="max-width: 300px; display: inline-block;">
                                    <i class="bi bi-arrow-left me-2"></i>Tiếp tục mua sắm
                                </a>
                            </div>
                            <% } else { const shippingData=(shippingPrefill && typeof shippingPrefill==='object' ) ?
                                shippingPrefill : { name: '' , phone: '' , address: '' , note: '' }; const
                                selectedPayment=paymentPrefill || 'COD' ; const hasSavedAddresses=addresses &&
                                addresses.length> 0;
                                const qrConfig = qrPaymentConfig || {};
                                %>
                                <form action="/checkout" method="POST" class="checkout-layout" id="checkoutForm">
                                    <section>
                                        <!-- Shipping Info -->
                                        <div class="section-card">
                                            <h3 class="section-title">
                                                <i class="bi bi-geo-alt"></i>Thông tin giao hàng
                                            </h3>

                                            <% if (hasSavedAddresses) { %>
                                                <% const hasDefaultAddress=(addresses || []).some(function(addr) {
                                                    return addr.isDefault; }); %>
                                                    <div class="mb-4">
                                                        <label class="form-label">Chọn địa chỉ đã lưu</label>
                                                        <div class="address-list list-group">
                                                            <% addresses.forEach(function(address, index) { const
                                                                shouldCheck=address.isDefault || (!hasDefaultAddress &&
                                                                index===0); %>
                                                                <label class="list-group-item">
                                                                    <input type="radio" name="addressId"
                                                                        value="<%= address.id %>"
                                                                        class="form-check-input me-3"
                                                                        data-name="<%= address.recipientName || '' %>"
                                                                        data-phone="<%= address.phoneNumber || '' %>"
                                                                        data-address="<%= [address.addressLine, address.ward, address.district, address.city].filter(Boolean).join(', ') %>"
                                                                        <%=shouldCheck ? "checked" : "" %>>
                                                                    <div>
                                                                        <strong>
                                                                            <%= address.recipientName %>
                                                                        </strong>
                                                                        <p class="mb-0 text-muted small">
                                                                            <%= address.phoneNumber %>
                                                                        </p>
                                                                        <p class="mb-0 text-muted small">
                                                                            <%= [address.addressLine, address.ward,
                                                                                address.district,
                                                                                address.city].filter(Boolean).join(', ') %>
                                                    </p>
                                                </div>
                                            </label>
                                        <% }) %>
                                    </div>
                                </div>
                            <% } else { %>
                                <div class="alert alert-warning border-0 bg-warning-subtle">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    Bạn chưa có địa chỉ đã lưu. Vui lòng nhập thông tin bên dưới.
                                </div>
                            <% } %>

                            <div class="row g-3 mb-3">
                                <div class="col-md-6">
                                    <label for="shippingName" class="form-label">Tên người nhận</label>
                                    <input type="text" class="form-control" id="shippingName" name="shippingName"
                                        value="<%= shippingData.name || '' %>" placeholder="Nhập tên người nhận" required>
                                </div>
                                <div class="col-md-6">
                                    <label for="shippingPhone" class="form-label">Số điện thoại</label>
                                    <input type="text" class="form-control" id="shippingPhone" name="shippingPhone"
                                        value="<%= shippingData.phone || '' %>" placeholder="Nhập số điện thoại" required>
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="shippingAddress" class="form-label">Địa chỉ giao hàng</label>
                                <textarea class="form-control" id="shippingAddress" name="shippingAddress" rows="2"
                                    placeholder="Nhập địa chỉ chi tiết" required><%= shippingData.address || '' %></textarea>
                            </div>
                            <div class="mb-0">
                                <label for="note" class="form-label">Ghi chú (tuỳ chọn)</label>
                                <textarea class="form-control" id="note" name="note" rows="2"
                                    placeholder="Ghi chú đơn hàng..."><%= shippingData.note || '' %></textarea>
                            </div>
                        </div>

                        <!-- Payment Method -->
                        <div class="section-card">
                            <h3 class="section-title">
                                <i class="bi bi-credit-card"></i>Phương thức thanh toán
                            </h3>
                            <div class="payment-options">
                                <label class="payment-card <%= selectedPayment === ' COD' ? 'selected' : '' %>"
                                                                                data-payment="COD">
                                                                                <input type="radio" name="paymentMethod"
                                                                                    value="COD" class="d-none"
                                                                                    <%=selectedPayment==='COD'
                                                                                    ? 'checked' : '' %>>
                                                                                <div class="payment-icon"><i
                                                                                        class="bi bi-cash-coin"></i>
                                                                                </div>
                                                                                <div>
                                                                                    <strong>Thanh toán khi nhận hàng
                                                                                        (COD)</strong>
                                                                                    <p class="mb-0 text-muted small">
                                                                                        Thanh toán tiền mặt khi nhận
                                                                                        hàng</p>
                                                                                </div>
                                                                </label>
                                                                <label
                                                                    class="payment-card <%= selectedPayment === 'Banking' ? 'selected' : '' %>"
                                                                    data-payment="Banking">
                                                                    <input type="radio" name="paymentMethod"
                                                                        value="Banking" class="d-none"
                                                                        <%=selectedPayment==='Banking' ? 'checked' : ''
                                                                        %>>
                                                                    <div class="payment-icon"><i class="bi bi-bank"></i>
                                                                    </div>
                                                                    <div>
                                                                        <strong>Chuyển khoản ngân hàng</strong>
                                                                        <p class="mb-0 text-muted small">Quét mã VietQR
                                                                            để thanh toán</p>
                                                                    </div>
                                                                </label>
                                                        </div>

                                                        <div id="qrPaymentPanel"
                                                            class="qr-card <%= selectedPayment === 'Banking' ? '' : 'd-none' %>">
                                                            <% if (qrConfig && qrConfig.imageUrl) { %>
                                                                <div
                                                                    class="d-flex flex-column flex-md-row gap-4 align-items-start">
                                                                    <img src="<%= qrConfig.imageUrl %>"
                                                                        alt="QR thanh toán" loading="lazy">
                                                                    <div>
                                                                        <h5 class="mb-3">Quét mã VietQR để chuyển khoản
                                                                        </h5>
                                                                        <p class="mb-1"><i
                                                                                class="bi bi-bank me-2"></i>Ngân hàng:
                                                                            <strong>
                                                                                <%= qrConfig.bankCode %>
                                                                            </strong></p>
                                                                        <p class="mb-1"><i
                                                                                class="bi bi-credit-card me-2"></i>Số
                                                                            TK: <strong>
                                                                                <%= qrConfig.accountNumber %>
                                                                            </strong></p>
                                                                        <p class="mb-1"><i
                                                                                class="bi bi-person me-2"></i>Chủ TK:
                                                                            <strong>
                                                                                <%= qrConfig.accountName %>
                                                                            </strong></p>
                                                                        <p class="mb-1"><i
                                                                                class="bi bi-cash me-2"></i>Số tiền:
                                                                            <strong>
                                                                                <%= (qrConfig.amount ||
                                                                                    0).toLocaleString('vi-VN', {
                                                                                    style: 'currency' , currency: 'VND'
                                                                                    }) %>
                                                                            </strong></p>
                                                                        <p class="mb-1"><i
                                                                                class="bi bi-chat-text me-2"></i>Nội
                                                                            dung:</p>
                                                                        <p class="fw-semibold" id="qrTransferNote">
                                                                            <%= qrConfig.transferNote %>
                                                                        </p>
                                                                        <small class="text-muted d-block">Vui lòng giữ
                                                                            nguyên nội dung chuyển khoản</small>
                                                                    </div>
                                                                </div>
                                                                <% } else { %>
                                                                    <p class="mb-0 text-muted">Thông tin QR chưa sẵn
                                                                        sàng. Vui lòng chọn phương thức khác.</p>
                                                                    <% } %>
                                                        </div>
                                                    </div>
                                    </section>

                                    <aside class="summary-column">
                                        <div class="summary-card">
                                            <h3 class="summary-title"><i class="bi bi-receipt me-2"></i>Đơn hàng</h3>
                                            <div class="cart-items">
                                                <% cart.items.forEach(function(item) { %>
                                                    <div class="cart-item">
                                                        <div>
                                                            <p class="cart-item-name">
                                                                <%= item.name %>
                                                            </p>
                                                            <% if (item.variantLabel) { %>
                                                                <p class="cart-item-variant">
                                                                    <%= item.variantLabel %>
                                                                </p>
                                                                <% } %>
                                                        </div>
                                                        <p class="mb-0">
                                                            <strong>
                                                                <%= item.quantity %>
                                                            </strong> x <%= item.price.toLocaleString('vi-VN', {
                                                                style: 'currency' , currency: 'VND' }) %>
                                                        </p>
                                                    </div>
                                                    <% }) %>
                                            </div>
                                            <div class="summary-row total">
                                                <span>Tổng thanh toán</span>
                                                <span>
                                                    <%= cart.subtotal.toLocaleString('vi-VN', { style: 'currency' ,
                                                        currency: 'VND' }) %>
                                                </span>
                                            </div>
                                            <button type="submit" class="btn-checkout">
                                                <i class="bi bi-check2-circle me-2"></i>Đặt hàng
                                            </button>
                                        </div>
                                    </aside>
                                </form>
                                <% } %>
            </div>
        </main>

        <%- include('partials/footer') %>

            <script id="checkout-data" type="application/json">
        <%- JSON.stringify({
            cart: cart || { items: [], subtotal: 0 },
            userId: currentUser ? currentUser.id : null,
        }) %>
    </script>
            <script>
                document.addEventListener("DOMContentLoaded", () => {
                    const addressRadios = document.querySelectorAll('input[name="addressId"]');
                    const nameInput = document.getElementById("shippingName");
                    const phoneInput = document.getElementById("shippingPhone");
                    const addressInput = document.getElementById("shippingAddress");
                    const paymentCards = document.querySelectorAll(".payment-card");
                    const qrPanel = document.getElementById("qrPaymentPanel");
                    const form = document.getElementById("checkoutForm");
                    const feedbackBox = document.getElementById("checkoutFeedback");
                    const checkoutDataNode = document.getElementById("checkout-data");
                    let checkoutData = {};

                    const showFeedback = (type, message) => {
                        if (!feedbackBox) return;
                        feedbackBox.innerHTML = `<div class="alert alert-${type}"><i class="bi bi-${type === 'success' ? 'check-circle' : type === 'danger' ? 'exclamation-circle' : 'info-circle'} me-2"></i>${message}</div>`;
                    };

                    if (checkoutDataNode) {
                        try {
                            checkoutData = JSON.parse(checkoutDataNode.textContent || "{}") || {};
                        } catch (error) {
                            checkoutData = {};
                        }
                    }

                    if (addressRadios.length && nameInput && phoneInput && addressInput) {
                        addressRadios.forEach((radio) => {
                            radio.addEventListener("change", () => {
                                nameInput.value = radio.dataset.name || "";
                                phoneInput.value = radio.dataset.phone || "";
                                addressInput.value = radio.dataset.address || "";
                            });
                            if (radio.checked) {
                                radio.dispatchEvent(new Event("change"));
                            }
                        });
                    }

                    const toggleQrPanel = (method) => {
                        if (!qrPanel) return;
                        qrPanel.classList.toggle("d-none", method !== "Banking");
                    };

                    paymentCards.forEach((card) => {
                        card.addEventListener("click", () => {
                            paymentCards.forEach((c) => c.classList.remove("selected"));
                            card.classList.add("selected");
                            const input = card.querySelector('input[name="paymentMethod"]');
                            if (input) {
                                input.checked = true;
                                toggleQrPanel(card.dataset.payment);
                            }
                        });
                        const input = card.querySelector('input[name="paymentMethod"]');
                        if (input && input.checked) {
                            card.classList.add("selected");
                            toggleQrPanel(card.dataset.payment);
                        }
                    });

                    const cartItems = (checkoutData.cart && Array.isArray(checkoutData.cart.items) ? checkoutData.cart.items : []);
                    const placeOrderBtn = form && form.querySelector(".btn-checkout");

                    if (form && cartItems.length) {
                        const originalBtnText = placeOrderBtn ? placeOrderBtn.innerHTML : "";
                        form.addEventListener("submit", async (event) => {
                            event.preventDefault();
                            const formData = new FormData(form);
                            const payload = {
                                items: cartItems.map((item) => ({ skuId: item.skuId, quantity: item.quantity })),
                                shippingName: formData.get("shippingName") || "",
                                shippingPhone: formData.get("shippingPhone") || "",
                                shippingAddress: formData.get("shippingAddress") || "",
                                paymentMethod: formData.get("paymentMethod") || "COD",
                                note: formData.get("note") || "",
                            };

                            if (placeOrderBtn) {
                                placeOrderBtn.disabled = true;
                                placeOrderBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Đang xử lý...';
                            }
                            showFeedback("info", "Đang xử lý đơn hàng...");

                            try {
                                const response = await fetch("/api/orders", {
                                    method: "POST",
                                    headers: { "Content-Type": "application/json" },
                                    body: JSON.stringify(payload),
                                    credentials: "same-origin",
                                });
                                const result = await response.json();
                                if (!response.ok) throw new Error(result.message || "Không thể đặt hàng.");
                                showFeedback("success", "Đặt hàng thành công! Đang chuyển hướng...");
                                setTimeout(() => {
                                    if (checkoutData.userId) {
                                        window.location.href = `/user/profile/${checkoutData.userId}`;
                                    } else {
                                        window.location.href = "/products";
                                    }
                                }, 1200);
                            } catch (error) {
                                showFeedback("danger", error.message || "Không thể đặt hàng. Vui lòng thử lại.");
                                if (placeOrderBtn) {
                                    placeOrderBtn.disabled = false;
                                    placeOrderBtn.innerHTML = originalBtnText;
                                }
                            }
                        });
                    }
                });
            </script>

