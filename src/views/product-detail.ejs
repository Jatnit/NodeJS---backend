<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | <%= product ? product.name : "Product Detail" %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        body {
            background-color: #f5f5f5;
            color: #000;
        }

        .detail-layout {
            display: grid;
            grid-template-columns: 1fr;
            gap: 3rem;
            padding: 2rem 0 4rem;
        }

        @media (min-width: 992px) {
            .detail-layout {
                grid-template-columns: 1fr 1fr;
            }

            .gallery-column {
                position: sticky;
                top: 110px;
                height: calc(100vh - 140px);
            }
        }

        .gallery-card {
            height: 100%;
            border-radius: 6px;
            overflow: hidden;
            background: #fff;
            box-shadow: 0 45px 90px rgba(0, 0, 0, 0.16);
        }

        .gallery-card img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .gallery-thumbs {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
            margin-top: 1.25rem;
        }

        .gallery-thumbs button {
            border: 1px solid #e0e0e0;
            border-radius: 6px;
            padding: 0;
            width: 78px;
            height: 78px;
            overflow: hidden;
            background: #fff;
            transition: border-color 0.2s ease;
        }

        .gallery-thumbs button.active {
            border-color: #111;
        }

        .gallery-thumbs img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .pill-group {
            display: flex;
            flex-wrap: wrap;
            gap: 0.75rem;
        }

        .pill {
            border-radius: 4px;
            border: 1px solid #d0d0d0;
            padding: 0.55rem 1.75rem;
            font-size: 0.95rem;
            cursor: pointer;
            transition: all 0.3s ease-in-out;
            background: #fff;
        }

        .color-pill {
            min-width: 48px;
            text-transform: capitalize;
        }

        .pill.selected {
            background: #111;
            color: #fff;
            border-color: #111;
        }

        .pill.disabled {
            opacity: 0.4;
            cursor: not-allowed;
            text-decoration: line-through;
        }

        .price-label {
            font-family: "Helvetica Neue", Arial, sans-serif;
            font-size: 1.8rem;
            color: #000;
        }

        .product-title {
            font-family: "Playfair Display", "Times New Roman", serif;
            font-size: 2.7rem;
            letter-spacing: 0.08em;
        }

        .btn-edgy {
            border-radius: 4px;
            transition: all 0.3s ease-in-out;
        }

        .btn-edgy:hover {
            transform: translateY(-2px);
            filter: brightness(0.92);
        }

        .mobile-cart-bar {
            position: fixed;
            bottom: 0;
            left: 0;
            right: 0;
            background: #000;
            color: #fff;
            padding: 1rem 1.5rem;
            display: flex;
            justify-content: space-between;
            gap: 1rem;
            z-index: 1040;
        }

        .mobile-cart-bar button {
            flex: 1;
        }

        @media (min-width: 992px) {
            .mobile-cart-bar {
                display: none;
            }
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>

        <main class="site-main">
            <div class="container">
                <% if (errorMessage) { %>
                    <div class="alert alert-danger text-center">
                        <%= errorMessage %>
                    </div>
                    <% } %>

                        <% if (product) { %>
                            <div class="detail-layout" id="productDetailRoot"
                                data-base-price="<%= Number(product ? product.basePrice || 0 : 0) %>">
                                <div class="gallery-column">
                                    <div class="gallery-card">
                                        <img id="mainProductImage"
                                            src="<%= (galleries && galleries[0]) || product.thumbnailUrl || 'https://images.unsplash.com/photo-1503341455253-b2e723bb3dbb?auto=format&fit=crop&w=1200&q=80' %>"
                                            alt="<%= product.name %>">
                                    </div>
                                    <div class="gallery-thumbs" id="galleryThumbs">
                                        <% if (galleries && galleries.length> 1) { %>
                                            <% galleries.forEach(function(image, index) { %>
                                                <button type="button" class="<%= index === 0 ? 'active' : '' %>"
                                                    data-thumb-src="<%= image %>">
                                                    <img src="<%= image %>" alt="gallery-thumb-<%= index %>">
                                                </button>
                                                <% }) %>
                                                    <% } %>
                                    </div>
                                </div>
                                <div class="info-column">
                                    <p class="text-uppercase text-muted mb-1">Moda Studio</p>
                                    <h1 class="product-title mb-3">
                                        <%= product.name %>
                                    </h1>
                                    <p class="price-label mb-4" id="skuPrice">
                                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                                            }).format(product.basePrice || 0) %>
                                    </p>

                                    <% if (colorOptions && colorOptions.length) { %>
                                        <div class="mb-4">
                                            <p class="text-uppercase text-muted small mb-2">
                                                Màu sắc
                                            </p>
                                            <div class="pill-group" id="colorOptions">
                                                <% colorOptions.forEach(function(color) { %>
                                                    <button type="button" class="pill color-pill"
                                                        data-color-id="<%= color.id %>" <% if (color.code) { %>
                                                        style="background:<%= color.code %>; color:<%=
                                                                color.code==='#000000' ? '#fff' : '#111' %>"
                                                                <% } %>>
                                                                    <%= color.value %>
                                                    </button>
                                                    <% }); %>
                                            </div>
                                        </div>
                                        <% } %>

                                            <% if (sizeOptions && sizeOptions.length) { %>
                                                <div class="mb-4">
                                                    <p class="text-uppercase text-muted small mb-2">
                                                        Size
                                                    </p>
                                                    <div class="pill-group" id="sizeOptions">
                                                        <% sizeOptions.forEach(function(size) { %>
                                                            <button type="button" class="pill"
                                                                data-size-id="<%= size.id %>">
                                                                <%= size.value %>
                                                            </button>
                                                            <% }); %>
                                                    </div>
                                                </div>
                                                <% } %>

                                                    <input type="hidden" id="selectedSkuId">
                                                    <p id="stockStatus" class="text-muted mb-4">Chọn màu và size để xem
                                                        tồn kho.
                                                    </p>

                                                    <button class="btn btn-dark btn-edgy w-100 mt-4"
                                                        id="addToCartBtnDesktop" disabled>Thêm
                                                        vào giỏ</button>
                                                    <div class="toast align-items-center text-bg-dark border-0 position-fixed bottom-0 end-0 m-3"
                                                        role="alert" id="selectionToast">
                                                        <div class="d-flex">
                                                            <div class="toast-body">
                                                                Please select options
                                                            </div>
                                                            <button type="button"
                                                                class="btn-close btn-close-white me-2 m-auto"
                                                                data-bs-dismiss="toast"></button>
                                                        </div>
                                                    </div>
                                </div>
                            </div>
                            <% } %>
            </div>
        </main>

        <% if (product) { %>
            <div class="mobile-cart-bar">
                <div>
                    <p class="mb-0 text-uppercase" style="letter-spacing: 0.25em; font-size: 0.7rem;">Subtotal</p>
                    <p class="mb-0 fw-semibold" id="mobileSubtotal">
                        <%= new Intl.NumberFormat('vi-VN', { style: 'currency' , currency: 'VND'
                            }).format(product.basePrice || 0) %>
                    </p>
                </div>
                <button class="btn btn-light btn-edgy" id="addToCartBtnMobile" disabled>Thêm vào giỏ</button>
            </div>
            <% } %>

                <%- include('partials/footer') %>

                    <% if (product) { %>
                        <script id="product-galleries" type="application/json">
                    <%- JSON.stringify(galleries || []) %>
                </script>
                        <script id="product-color-images" type="application/json">
                    <%- JSON.stringify(colorImages || []) %>
                </script>
                        <script id="product-skus" type="application/json">
                    <%- JSON.stringify(skuOptions || []) %>
                </script>
                        <script id="product-colors" type="application/json">
                    <%- JSON.stringify(colorOptions || []) %>
                </script>
                        <script id="product-sizes" type="application/json">
                    <%- JSON.stringify(sizeOptions || []) %>
                </script>
                        <% } %>

                            <script>
                                const parseJsonData = (id, fallback) => {
                                    const node = document.getElementById(id);
                                    if (!node) {
                                        return fallback;
                                    }
                                    try {
                                        const parsed = JSON.parse(node.textContent || "null");
                                        return parsed ?? fallback;
                                    } catch (error) {
                                        return fallback;
                                    }
                                };

                                (function () {
                                    const rootEl = document.getElementById("productDetailRoot");
                                    if (!rootEl) return;
                                    const basePrice = Number(rootEl.dataset.basePrice || 0);
                                    const galleries = parseJsonData("product-galleries", []);
                                    const colorImages = parseJsonData("product-color-images", []);
                                    const skuOptions = parseJsonData("product-skus", []);
                                    const colorOptions = parseJsonData("product-colors", []);
                                    const sizeOptions = parseJsonData("product-sizes", []);

                                    const colorImageMap = new Map(
                                        colorImages.map((item) => [Number(item.colorValueId), item.imageUrl])
                                    );

                                    const mainImageEl = document.getElementById("mainProductImage");
                                    const thumbsContainer = document.getElementById("galleryThumbs");
                                    const colorButtons = document.querySelectorAll("#colorOptions .pill");
                                    const sizeButtons = document.querySelectorAll("#sizeOptions .pill");
                                    const skuPriceEl = document.getElementById("skuPrice");
                                    const stockStatusEl = document.getElementById("stockStatus");
                                    const desktopBtn = document.getElementById("addToCartBtnDesktop");
                                    const mobileBtn = document.getElementById("addToCartBtnMobile");
                                    const cartButtons = [desktopBtn, mobileBtn].filter(Boolean);
                                    const hiddenSkuInput = document.getElementById("selectedSkuId");
                                    const mobileSubtotal = document.getElementById("mobileSubtotal");
                                    const toastEl = document.getElementById("selectionToast");
                                    const toastInstance = toastEl ? new bootstrap.Toast(toastEl) : null;

                                    const currencyFormatter = new Intl.NumberFormat("vi-VN", {
                                        style: "currency",
                                        currency: "VND",
                                    });

                                    const baseImages =
                                        galleries.length > 0
                                            ? galleries.slice()
                                            : mainImageEl && mainImageEl.src
                                                ? [mainImageEl.src]
                                                : [];

                                    const state = {
                                        selectedColor: null,
                                        selectedSize: null,
                                        selectedSku: null,
                                    };

                                    const setCartButtonsState = (enabled, text) => {
                                        cartButtons.forEach((btn) => {
                                            btn.disabled = !enabled;
                                            btn.textContent = text;
                                        });
                                    };

                                    const renderThumbs = (images) => {
                                        if (!thumbsContainer) return;
                                        thumbsContainer.innerHTML = "";
                                        if (!images || images.length <= 1) {
                                            return;
                                        }
                                        images.forEach((image, index) => {
                                            const button = document.createElement("button");
                                            button.type = "button";
                                            button.dataset.thumbSrc = image;
                                            if (index === 0) {
                                                button.classList.add("active");
                                            }
                                            button.addEventListener("click", () => {
                                                if (mainImageEl) {
                                                    mainImageEl.src = image;
                                                }
                                                Array.from(thumbsContainer.querySelectorAll("button")).forEach((node) =>
                                                    node.classList.toggle("active", node === button)
                                                );
                                            });
                                            const img = document.createElement("img");
                                            img.src = image;
                                            img.alt = `thumb-${index}`;
                                            button.appendChild(img);
                                            thumbsContainer.appendChild(button);
                                        });
                                    };

                                    const updateGallery = () => {
                                        const overrideImage =
                                            state.selectedColor && colorImageMap.has(state.selectedColor)
                                                ? colorImageMap.get(state.selectedColor)
                                                : null;
                                        const imagesToShow = overrideImage ? [overrideImage] : baseImages;
                                        if (mainImageEl && imagesToShow.length) {
                                            mainImageEl.src = imagesToShow[0];
                                        }
                                        renderThumbs(imagesToShow);
                                    };

                                    const refreshColorButtons = () => {
                                        if (!colorButtons.length) return;
                                        colorButtons.forEach((btn) => {
                                            const colorId = Number(btn.dataset.colorId);
                                            const available = skuOptions.some(
                                                (sku) =>
                                                    sku.colorValueId === colorId &&
                                                    Number(sku.stockQuantity || 0) > 0
                                            );
                                            btn.disabled = !available;
                                            btn.classList.toggle("disabled", !available);
                                            btn.classList.toggle("selected", state.selectedColor === colorId);
                                        });
                                    };

                                    const refreshSizeButtons = () => {
                                        if (!sizeButtons.length) return;
                                        sizeButtons.forEach((btn) => {
                                            const sizeId = Number(btn.dataset.sizeId);
                                            const available = skuOptions.some(
                                                (sku) =>
                                                    sku.sizeValueId === sizeId &&
                                                    (!state.selectedColor || sku.colorValueId === state.selectedColor) &&
                                                    Number(sku.stockQuantity || 0) > 0
                                            );
                                            const isSelected = state.selectedSize === sizeId && available;
                                            if (!available && state.selectedSize === sizeId) {
                                                state.selectedSize = null;
                                            }
                                            btn.disabled = !available;
                                            btn.classList.toggle("disabled", !available);
                                            btn.classList.toggle("selected", isSelected);
                                        });
                                    };

                                    const findMatchingSku = () => {
                                        if (!state.selectedColor || !state.selectedSize) {
                                            return null;
                                        }
                                        return skuOptions.find(
                                            (sku) =>
                                                sku.colorValueId === state.selectedColor &&
                                                sku.sizeValueId === state.selectedSize
                                        );
                                    };

                                    const updateSummary = () => {
                                        const matchedSku = findMatchingSku();
                                        state.selectedSku = matchedSku || null;
                                        if (matchedSku) {
                                            hiddenSkuInput.value = matchedSku.id;
                                            const formattedPrice = currencyFormatter.format(
                                                Number(matchedSku.price) || basePrice
                                            );
                                            skuPriceEl.textContent = formattedPrice;
                                            if (mobileSubtotal) {
                                                mobileSubtotal.textContent = formattedPrice;
                                            }
                                            if (matchedSku.stockQuantity > 0) {
                                                stockStatusEl.textContent = `Còn ${matchedSku.stockQuantity} sản phẩm`;
                                                setCartButtonsState(true, "Thêm vào giỏ");
                                            } else {
                                                stockStatusEl.textContent = "Hết hàng";
                                                setCartButtonsState(false, "Hết hàng");
                                            }
                                        } else {
                                            hiddenSkuInput.value = "";
                                            skuPriceEl.textContent = currencyFormatter.format(basePrice);
                                            if (mobileSubtotal) {
                                                mobileSubtotal.textContent = currencyFormatter.format(basePrice);
                                            }
                                            stockStatusEl.textContent =
                                                colorOptions.length && sizeOptions.length
                                                    ? "Chọn màu và size để xem tồn kho."
                                                    : "Chưa có biến thể để lựa chọn.";
                                            setCartButtonsState(false, "Thêm vào giỏ");
                                        }
                                    };

                                    const handleColorClick = (event) => {
                                        const button = event.currentTarget;
                                        if (button.classList.contains("disabled")) {
                                            return;
                                        }
                                        const colorId = Number(button.dataset.colorId);
                                        state.selectedColor =
                                            state.selectedColor === colorId ? null : colorId;
                                        state.selectedSize = null;
                                        refreshColorButtons();
                                        refreshSizeButtons();
                                        updateGallery();
                                        updateSummary();
                                    };

                                    const handleSizeClick = (event) => {
                                        const button = event.currentTarget;
                                        if (button.classList.contains("disabled")) {
                                            return;
                                        }
                                        const sizeId = Number(button.dataset.sizeId);
                                        state.selectedSize =
                                            state.selectedSize === sizeId ? null : sizeId;
                                        refreshSizeButtons();
                                        updateSummary();
                                    };

                                    colorButtons.forEach((btn) =>
                                        btn.addEventListener("click", handleColorClick)
                                    );
                                    sizeButtons.forEach((btn) =>
                                        btn.addEventListener("click", handleSizeClick)
                                    );

                                    const handleAddToCart = async () => {
                                        const skuId = hiddenSkuInput.value;
                                        if (!skuId) {
                                            toastInstance && toastInstance.show();
                                            return;
                                        }
                                        try {
                                            const response = await fetch("/cart/add", {
                                                method: "POST",
                                                headers: { "Content-Type": "application/json" },
                                                body: JSON.stringify({ skuId }),
                                            });
                                            if (!response.ok) {
                                                throw new Error("Network error");
                                            }
                                            const data = await response.json();
                                            if (!data.success) {
                                                alert(data.message || "Unable to add to cart.");
                                                return;
                                            }
                                            if (data.cart) {
                                                if (
                                                    window.__CART_DRAWER__ &&
                                                    typeof window.__CART_DRAWER__.update === "function"
                                                ) {
                                                    window.__CART_DRAWER__.update(data.cart);
                                                }
                                                if (typeof window.dispatchEvent === "function") {
                                                    window.dispatchEvent(
                                                        new CustomEvent("cart:updated", { detail: data.cart })
                                                    );
                                                    window.dispatchEvent(new CustomEvent("cart:open"));
                                                }
                                            }
                                        } catch (error) {
                                            console.error(error);
                                            alert("Unable to add to cart.");
                                        }
                                    };

                                    cartButtons.forEach((btn) =>
                                        btn.addEventListener("click", handleAddToCart)
                                    );

                                    refreshColorButtons();
                                    refreshSizeButtons();
                                    updateGallery();
                                    updateSummary();
                                })();
                            </script>

</body>

</html>