<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | Thông tin tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <style>
        .profile-hero {
            border-radius: 28px;
            padding: 2.5rem;
            background: linear-gradient(135deg, #111, #333);
            color: #fff;
            box-shadow: 0 40px 80px rgba(0, 0, 0, 0.35);
        }

        .profile-pill {
            letter-spacing: 0.35em;
            font-size: 0.75rem;
            text-transform: uppercase;
            opacity: 0.8;
        }

        .info-card,
        .address-card,
        .orders-card {
            border-radius: 24px;
            border: 1px solid var(--border-color, rgba(0, 0, 0, 0.08));
            background: var(--card-bg, #fff);
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.08);
        }

        .address-item+.address-item {
            border-top: 1px solid rgba(0, 0, 0, 0.08);
            padding-top: 1rem;
            margin-top: 1rem;
        }

        .badge-soft {
            background: rgba(180, 139, 87, 0.15);
            color: #6c4d2b;
            font-weight: 600;
            border-radius: 999px;
            font-size: 0.75rem;
            padding: 0.35rem 0.9rem;
        }

        .order-item+.order-item {
            border-top: 1px solid var(--border-color, rgba(0, 0, 0, 0.08));
            padding-top: 1.5rem;
            margin-top: 1.5rem;
        }

        .order-progress {
            display: grid;
            grid-template-columns: repeat(4, minmax(0, 1fr));
            gap: 1rem;
            margin-top: 1rem;
        }

        .progress-node {
            position: relative;
            text-align: center;
            font-size: 0.85rem;
            color: #94a3b8;
        }

        .progress-node::before {
            content: "";
            position: absolute;
            top: 14px;
            left: -50%;
            right: 50%;
            height: 2px;
            background: rgba(148, 163, 184, 0.6);
            z-index: 1;
        }

        .progress-node:first-child::before {
            display: none;
        }

        .progress-dot {
            width: 18px;
            height: 18px;
            border-radius: 50%;
            margin: 0 auto 6px;
            border: 2px solid rgba(148, 163, 184, 0.8);
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--card-bg, #fff);
            position: relative;
            z-index: 2;
        }

        .progress-node.completed {
            color: #111;
        }

        .progress-node.completed .progress-dot {
            background: #111;
            border-color: #111;
        }

        .progress-node.active .progress-dot {
            border-color: #111;
        }

        .progress-node.is-cancelled {
            color: #dc3545;
        }

        .progress-node.is-cancelled .progress-dot {
            border-color: #dc3545;
        }

        .status-badge {
            border-radius: 999px;
            padding: 0.2rem 0.85rem;
            font-size: 0.75rem;
            font-weight: 600;
        }

        .status-badge.success {
            background: rgba(16, 185, 129, 0.15);
            color: #0f9d76;
        }

        .status-badge.warning {
            background: rgba(251, 191, 36, 0.18);
            color: #b45309;
        }

        .status-badge.info {
            background: rgba(59, 130, 246, 0.18);
            color: #1d4ed8;
        }

        .status-badge.danger {
            background: rgba(239, 68, 68, 0.2);
            color: #b91c1c;
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>
        <main class="site-main py-5">
            <div class="container">
                <% if (errorMessage) { %>
                    <div class="alert alert-danger mb-4">
                        <%= errorMessage %>
                    </div>
                    <% } %>

                        <% if (!user) { %>
                            <div class="alert alert-warning">
                                Không tìm thấy thông tin tài khoản. Vui lòng quay lại sau.
                            </div>
                            <% } else { const addressList=Array.isArray(addresses) ? addresses : []; const
                                orderList=Array.isArray(orders) ? orders : []; %>
                                <section class="profile-hero mb-5">
                                    <p class="profile-pill mb-2">Member Profile</p>
                                    <div
                                        class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
                                        <div>
                                            <h1 class="fw-semibold mb-1">
                                                Xin chào, <%= user.username || user.email %>
                                            </h1>
                                            <p class="mb-0 text-white-50">
                                                Theo dõi thông tin tài khoản, địa chỉ nhận hàng và tiến trình đơn hàng
                                                của bạn.
                                            </p>
                                        </div>
                                        <span class="badge-soft">
                                            <%= String(user.roleId)==="1" ? "Administrator" : "Thành viên" %>
                                        </span>
                                    </div>
                                </section>

                                <div class="row g-4 mb-4">
                                    <div class="col-lg-4">
                                        <div class="info-card p-4 h-100">
                                            <h5 class="text-uppercase text-muted" style="letter-spacing: 0.25em;">
                                                Thông tin cơ bản
                                            </h5>
                                            <div class="mt-4">
                                                <div class="mb-3">
                                                    <small class="text-muted text-uppercase">Tên hiển thị</small>
                                                    <p class="fs-5 mb-0">
                                                        <%= user.username %>
                                                    </p>
                                                </div>
                                                <div class="mb-3">
                                                    <small class="text-muted text-uppercase">Email</small>
                                                    <p class="fs-5 mb-0">
                                                        <%= user.email %>
                                                    </p>
                                                </div>
                                                <div class="mb-3">
                                                    <small class="text-muted text-uppercase">Vai trò</small>
                                                    <p class="fs-5 mb-0">
                                                        <%= String(user.roleId)==="1" ? "Quản trị viên" : "Khách hàng"
                                                            %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="d-flex gap-2 mt-4">
                                                <a href="/" class="btn btn-outline-dark flex-grow-1">Trang chủ</a>
                                                <a href="/products" class="btn btn-dark flex-grow-1">Tiếp tục mua
                                                    sắm</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-8">
                                        <div class="address-card p-4 h-100">
                                            <div class="d-flex justify-content-between align-items-center mb-3">
                                                <div>
                                                    <h5 class="mb-0">Địa chỉ nhận hàng</h5>
                                                    <small class="text-muted">Quản lý các điểm giao hàng mặc
                                                        định</small>
                                                </div>
                                            </div>
                                            <% if (!addressList.length) { %>
                                                <div class="alert alert-warning mb-0">
                                                    Bạn chưa có địa chỉ nhận hàng nào. Vui lòng thêm địa chỉ ở trang
                                                    Checkout khi đặt đơn.
                                                </div>
                                                <% } else { %>
                                                    <% addressList.forEach(function(address){ %>
                                                        <div class="address-item">
                                                            <div
                                                                class="d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    <p class="mb-1 fw-semibold">
                                                                        <%= address.recipientName %>
                                                                    </p>
                                                                    <small class="text-muted d-block">Số điện thoại: <%=
                                                                            address.phoneNumber %></small>
                                                                </div>
                                                                <% if (address.isDefault) { %>
                                                                    <span class="badge-soft">Mặc định</span>
                                                                    <% } %>
                                                            </div>
                                                            <p class="mb-0 text-muted mt-2">
                                                                <span class="me-2">•</span>
                                                                <%= address.fullAddress %>
                                                            </p>
                                                        </div>
                                                        <% }) %>
                                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <div class="orders-card p-4">
                                    <div class="d-flex justify-content-between align-items-center mb-3">
                                        <div>
                                            <h5 class="mb-0">Đơn hàng gần đây</h5>
                                            <small class="text-muted">Theo dõi trạng thái xử lý đơn của bạn</small>
                                        </div>
                                    </div>
                                    <% if (!orderList.length) { %>
                                        <div class="alert alert-info mb-0">
                                            Bạn chưa có đơn hàng nào. Hãy khám phá bộ sưu tập mới tại Moda Studio!
                                        </div>
                                        <% } else { %>
                                            <% orderList.forEach(function(order){ %>
                                                <div class="order-item">
                                                    <div
                                                        class="d-flex flex-column flex-md-row justify-content-between gap-3">
                                                        <div>
                                                            <p class="fw-semibold mb-1">
                                                                Mã đơn <span class="text-uppercase">
                                                                    <%= order.code %>
                                                                </span>
                                                            </p>
                                                            <small class="text-muted">
                                                                Ngày đặt: <%= order.orderDate ? new
                                                                    Date(order.orderDate).toLocaleDateString('vi-VN', {
                                                                    day: '2-digit' , month: '2-digit' , year: 'numeric'
                                                                    }) : 'Chưa cập nhật' %>
                                                            </small>
                                                        </div>
                                                        <div class="text-md-end">
                                                            <p class="mb-1 fw-semibold">
                                                                <%= (order.totalAmount || 0).toLocaleString('vi-VN', {
                                                                    style: 'currency' , currency: 'VND' }) %>
                                                            </p>
                                                            <% const statusClass=order.status==="Hoàn thành" ? "success"
                                                                : order.status==="Đang giao" ? "info" :
                                                                order.status==="Đã hủy" ? "danger" : "warning" ; %>
                                                                <span class="status-badge <%= statusClass %>">
                                                                    <%= order.status %>
                                                                </span>
                                                                <div class="mt-2">
                                                                    <a href="/user/orders/<%= order.id %>"
                                                                        class="btn btn-outline-dark btn-sm">
                                                                        Xem chi tiết
                                                                    </a>
                                                                </div>
                                                        </div>
                                                    </div>
                                                    <div class="order-progress">
                                                        <% (order.progress || []).forEach(function(step){ %>
                                                            <div class="progress-node
                                                                <%= step.isCompleted ? 'completed' : '' %>
                                                                <%= step.isActive ? 'active' : '' %>
                                                                <%= order.isCancelled ? 'is-cancelled' : '' %>">
                                                                <div class="progress-dot"></div>
                                                                <div class="small">
                                                                    <%= step.label %>
                                                                </div>
                                                            </div>
                                                            <% }) %>
                                                    </div>
                                                    <% if (order.isCancelled) { %>
                                                        <div class="alert alert-warning border-0 mt-3 mb-0">
                                                            Đơn hàng đã bị hủy. Nếu bạn cần hỗ trợ, vui lòng liên hệ đội
                                                            ngũ CSKH của chúng tôi.
                                                        </div>
                                                        <% } %>
                                                </div>
                                                <% }) %>
                                                    <% } %>
                                </div>
                                <% } %>
            </div>
        </main>
        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>