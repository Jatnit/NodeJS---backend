<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | Thông tin tài khoản</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Inter:wght@300;400;500;600;700&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        :root {
            --color-slate: #6c737e;
            --color-steel: #7393a7;
            --color-mist: #b5cfd8;
            --color-cloud: #e8ecf1;
            --font-display: 'Cormorant Garamond', Georgia, serif;
            --font-body: 'Inter', sans-serif;
        }

        body {
            font-family: var(--font-body);
        }

        .profile-hero {
            position: relative;
            border-radius: 28px;
            padding: 3rem;
            background: linear-gradient(135deg, var(--color-slate) 0%, var(--color-steel) 100%);
            color: #fff;
            box-shadow: 0 25px 60px rgba(108, 115, 126, 0.3);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .profile-hero::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -20%;
            width: 80%;
            height: 150%;
            background: radial-gradient(ellipse, rgba(181, 207, 216, 0.3) 0%, transparent 70%);
        }

        .profile-hero-content {
            position: relative;
            z-index: 2;
        }

        .profile-label {
            letter-spacing: 0.3em;
            font-size: 0.7rem;
            text-transform: uppercase;
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 0.75rem;
        }

        .profile-hero h1 {
            font-family: var(--font-display);
            font-size: 2.5rem;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .profile-hero p {
            color: rgba(255, 255, 255, 0.8);
            margin-bottom: 0;
        }

        .role-badge {
            display: inline-block;
            background: rgba(255, 255, 255, 0.2);
            backdrop-filter: blur(10px);
            border-radius: 50px;
            padding: 0.5rem 1.25rem;
            font-size: 0.8rem;
            font-weight: 600;
            letter-spacing: 0.1em;
            border: 1px solid rgba(255, 255, 255, 0.3);
        }

        .section-card {
            background: #fff;
            border-radius: 24px;
            padding: 2rem;
            box-shadow: 0 15px 50px rgba(108, 115, 126, 0.08);
            border: 1px solid rgba(108, 115, 126, 0.08);
        }

        body.theme-dark .section-card {
            background: var(--card-bg);
            border-color: rgba(255, 255, 255, 0.08);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .section-title {
            font-family: var(--font-display);
            font-size: 1.5rem;
            font-weight: 500;
            color: var(--color-slate);
            margin-bottom: 0;
        }

        .info-item {
            margin-bottom: 1.25rem;
        }

        .info-item:last-child {
            margin-bottom: 0;
        }

        .info-label {
            font-size: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.1em;
            text-transform: uppercase;
            color: var(--color-steel);
            margin-bottom: 0.25rem;
        }

        .info-value {
            font-size: 1.1rem;
            color: var(--color-slate);
            font-weight: 500;
        }

        .btn-action {
            background: var(--color-slate);
            color: #fff;
            border: none;
            border-radius: 12px;
            padding: 0.85rem 1.5rem;
            font-weight: 600;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-action:hover {
            background: var(--color-steel);
            color: #fff;
            transform: translateY(-2px);
        }

        .btn-outline-action {
            background: transparent;
            color: var(--color-slate);
            border: 2px solid var(--color-cloud);
        }

        .btn-outline-action:hover {
            background: var(--color-slate);
            color: #fff;
            border-color: var(--color-slate);
        }

        .address-item {
            padding: 1.25rem;
            border-radius: 16px;
            background: var(--color-cloud);
            margin-bottom: 1rem;
            transition: all 0.3s ease;
        }

        body.theme-dark .address-item {
            background: rgba(255, 255, 255, 0.05);
        }

        .address-item:last-child {
            margin-bottom: 0;
        }

        .address-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 30px rgba(108, 115, 126, 0.1);
        }

        .address-name {
            font-weight: 600;
            color: var(--color-slate);
            margin-bottom: 0.25rem;
        }

        .address-detail {
            font-size: 0.9rem;
            color: var(--color-steel);
        }

        .default-badge {
            background: var(--color-steel);
            color: #fff;
            font-size: 0.7rem;
            font-weight: 600;
            padding: 0.3rem 0.75rem;
            border-radius: 50px;
            letter-spacing: 0.05em;
        }

        .orders-section {
            margin-top: 2rem;
        }

        .order-item {
            background: #fff;
            border-radius: 20px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            box-shadow: 0 10px 40px rgba(108, 115, 126, 0.08);
            border: 1px solid rgba(108, 115, 126, 0.08);
            transition: all 0.3s ease;
        }

        body.theme-dark .order-item {
            background: var(--card-bg);
            border-color: rgba(255, 255, 255, 0.08);
        }

        .order-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 15px 50px rgba(108, 115, 126, 0.15);
        }

        .order-code {
            font-family: var(--font-display);
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--color-slate);
        }

        .order-date {
            font-size: 0.85rem;
            color: var(--color-steel);
        }

        .order-amount {
            font-size: 1.15rem;
            font-weight: 700;
            color: var(--color-slate);
        }

        .status-badge {
            border-radius: 50px;
            padding: 0.4rem 1rem;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .status-badge.success {
            background: rgba(16, 185, 129, 0.15);
            color: #059669;
        }

        .status-badge.warning {
            background: rgba(251, 191, 36, 0.2);
            color: #b45309;
        }

        .status-badge.info {
            background: rgba(59, 130, 246, 0.15);
            color: #1d4ed8;
        }

        .status-badge.danger {
            background: rgba(239, 68, 68, 0.15);
            color: #dc2626;
        }

        .order-progress {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0.5rem;
            margin-top: 1.25rem;
        }

        .progress-node {
            position: relative;
            text-align: center;
            font-size: 0.8rem;
            color: var(--color-mist);
        }

        .progress-node::before {
            content: "";
            position: absolute;
            top: 12px;
            left: -50%;
            right: 50%;
            height: 2px;
            background: var(--color-cloud);
            z-index: 1;
        }

        .progress-node:first-child::before {
            display: none;
        }

        .progress-dot {
            width: 24px;
            height: 24px;
            border-radius: 50%;
            margin: 0 auto 8px;
            border: 2px solid var(--color-cloud);
            display: flex;
            align-items: center;
            justify-content: center;
            background: #fff;
            position: relative;
            z-index: 2;
            font-size: 0.65rem;
        }

        .progress-node.completed {
            color: var(--color-slate);
        }

        .progress-node.completed .progress-dot {
            background: var(--color-slate);
            border-color: var(--color-slate);
            color: #fff;
        }

        .progress-node.completed::before {
            background: var(--color-slate);
        }

        .progress-node.active .progress-dot {
            border-color: var(--color-steel);
            border-width: 3px;
        }

        .progress-node.is-cancelled {
            color: #dc2626;
        }

        .progress-node.is-cancelled .progress-dot {
            border-color: #dc2626;
        }

        .alert {
            border-radius: 14px;
            border: none;
        }

        .empty-state {
            text-align: center;
            padding: 2rem;
            color: var(--color-steel);
        }

        .empty-state i {
            font-size: 3rem;
            margin-bottom: 1rem;
            color: var(--color-mist);
        }
    </style>
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>
        <main class="site-main py-5">
            <div class="container">
                <% if (errorMessage) { %>
                    <div class="alert alert-danger mb-4">
                        <%= errorMessage %>
                    </div>
                    <% } %>

                        <% if (!user) { %>
                            <div class="alert alert-warning">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Không tìm thấy thông tin tài khoản.
                            </div>
                            <% } else { const addressList=Array.isArray(addresses) ? addresses : []; const
                                orderList=Array.isArray(orders) ? orders : []; %>
                                <!-- Profile Hero -->
                                <div class="profile-hero">
                                    <div class="profile-hero-content">
                                        <div
                                            class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-3">
                                            <div>
                                                <p class="profile-label"><i class="bi bi-person-badge me-2"></i>Thông
                                                    tin cá nhân</p>
                                                <h1>Xin chào, <%= user.username || user.email %>
                                                </h1>
                                                <p>Quản lý tài khoản và theo dõi đơn hàng của bạn</p>
                                            </div>
                                            <span class="role-badge">
                                                <i class="bi bi-shield-check me-1"></i>
                                                <%= String(user.roleId)==="1" ? "Administrator" : "Thành viên" %>
                                            </span>
                                        </div>
                                    </div>
                                </div>

                                <div class="row g-4 mb-4">
                                    <!-- Account Info -->
                                    <div class="col-lg-4">
                                        <div class="section-card">
                                            <h3 class="section-title mb-4"><i class="bi bi-person me-2"
                                                    style="color: var(--color-steel);"></i>Tài khoản</h3>
                                            <div class="info-item">
                                                <p class="info-label">Tên hiển thị</p>
                                                <p class="info-value">
                                                    <%= user.username %>
                                                </p>
                                            </div>
                                            <div class="info-item">
                                                <p class="info-label">Email</p>
                                                <p class="info-value">
                                                    <%= user.email %>
                                                </p>
                                            </div>
                                            <div class="info-item">
                                                <p class="info-label">Vai trò</p>
                                                <p class="info-value">
                                                    <%= String(user.roleId)==="1" ? "Quản trị viên" : "Khách hàng" %>
                                                </p>
                                            </div>
                                            <div class="d-flex gap-2 mt-4">
                                                <a href="/" class="btn-action btn-outline-action flex-grow-1">
                                                    <i class="bi bi-house"></i>Trang chủ
                                                </a>
                                                <a href="/products" class="btn-action flex-grow-1">
                                                    <i class="bi bi-bag"></i>Mua sắm
                                                </a>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Addresses -->
                                    <div class="col-lg-8">
                                        <div class="section-card">
                                            <div class="section-header">
                                                <h3 class="section-title"><i class="bi bi-geo-alt me-2"
                                                        style="color: var(--color-steel);"></i>Địa chỉ nhận hàng</h3>
                                            </div>
                                            <% if (!addressList.length) { %>
                                                <div class="empty-state">
                                                    <i class="bi bi-geo"></i>
                                                    <p class="mb-0">Bạn chưa có địa chỉ nhận hàng nào.</p>
                                                </div>
                                                <% } else { %>
                                                    <% addressList.forEach(function(address) { %>
                                                        <div class="address-item">
                                                            <div
                                                                class="d-flex justify-content-between align-items-start">
                                                                <div>
                                                                    <p class="address-name">
                                                                        <i class="bi bi-person me-2"></i>
                                                                        <%= address.recipientName %>
                                                                    </p>
                                                                    <p class="address-detail mb-1">
                                                                        <i class="bi bi-telephone me-2"></i>
                                                                        <%= address.phoneNumber %>
                                                                    </p>
                                                                    <p class="address-detail mb-0">
                                                                        <i class="bi bi-pin-map me-2"></i>
                                                                        <%= address.fullAddress %>
                                                                    </p>
                                                                </div>
                                                                <% if (address.isDefault) { %>
                                                                    <span class="default-badge">Mặc định</span>
                                                                    <% } %>
                                                            </div>
                                                        </div>
                                                        <% }) %>
                                                            <% } %>
                                        </div>
                                    </div>
                                </div>

                                <!-- Orders -->
                                <div class="orders-section">
                                    <div class="section-header mb-4">
                                        <h3 class="section-title"><i class="bi bi-box-seam me-2"
                                                style="color: var(--color-steel);"></i>Đơn hàng gần đây</h3>
                                    </div>
                                    <% if (!orderList.length) { %>
                                        <div class="section-card">
                                            <div class="empty-state">
                                                <i class="bi bi-cart-x"></i>
                                                <h4>Chưa có đơn hàng</h4>
                                                <p class="mb-3">Hãy khám phá bộ sưu tập mới nhất!</p>
                                                <a href="/products" class="btn-action">
                                                    <i class="bi bi-bag-plus"></i>Mua sắm ngay
                                                </a>
                                            </div>
                                        </div>
                                        <% } else { %>
                                            <% orderList.forEach(function(order) { %>
                                                <div class="order-item">
                                                    <div
                                                        class="d-flex flex-column flex-md-row justify-content-between gap-3">
                                                        <div>
                                                            <p class="order-code mb-1">
                                                                <i class="bi bi-receipt me-2"></i>Đơn hàng #<%=
                                                                    order.code %>
                                                            </p>
                                                            <p class="order-date mb-0">
                                                                <i class="bi bi-calendar3 me-1"></i>
                                                                Ngày đặt: <%= order.orderDate ? new
                                                                    Date(order.orderDate).toLocaleDateString('vi-VN', {
                                                                    day: '2-digit' , month: '2-digit' , year: 'numeric'
                                                                    }) : 'Chưa cập nhật' %>
                                                            </p>
                                                        </div>
                                                        <div class="text-md-end">
                                                            <p class="order-amount mb-2">
                                                                <%= (order.totalAmount || 0).toLocaleString('vi-VN', {
                                                                    style: 'currency' , currency: 'VND' }) %>
                                                            </p>
                                                            <% const statusClass=order.status==="Hoàn thành" ? "success"
                                                                : order.status==="Đang giao" ? "info" :
                                                                order.status==="Đã hủy" ? "danger" : "warning" ; %>
                                                                <span class="status-badge <%= statusClass %>">
                                                                    <%= order.status %>
                                                                </span>
                                                                <div class="mt-2">
                                                                    <a href="/user/orders/<%= order.id %>"
                                                                        class="btn-action"
                                                                        style="padding: 0.5rem 1rem; font-size: 0.85rem;">
                                                                        <i class="bi bi-eye"></i>Chi tiết
                                                                    </a>
                                                                </div>
                                                        </div>
                                                    </div>
                                                    <div class="order-progress">
                                                        <% (order.progress || []).forEach(function(step) { %>
                                                            <div class="progress-node 
                                            <%= step.isCompleted ? 'completed' : '' %> 
                                            <%= step.isActive ? 'active' : '' %> 
                                            <%= order.isCancelled ? 'is-cancelled' : '' %>">
                                                                <div class="progress-dot">
                                                                    <% if (step.isCompleted) { %><i
                                                                            class="bi bi-check"></i>
                                                                        <% } %>
                                                                </div>
                                                                <div>
                                                                    <%= step.label %>
                                                                </div>
                                                            </div>
                                                            <% }) %>
                                                    </div>
                                                    <% if (order.isCancelled) { %>
                                                        <div class="alert alert-warning border-0 mt-3 mb-0">
                                                            <i class="bi bi-exclamation-triangle me-2"></i>
                                                            Đơn hàng đã bị hủy. Liên hệ CSKH nếu cần hỗ trợ.
                                                        </div>
                                                        <% } %>
                                                </div>
                                                <% }) %>
                                                    <% } %>
                                </div>
                                <% } %>
            </div>
        </main>
        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>