<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moda Studio | Quản trị người dùng</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
</head>

<body class="<%= theme === 'dark' ? 'theme-dark' : 'theme-light' %>">
    <%- include('partials/header') %>
        <main class="site-main">
            <div class="user-infor-container">
                <div class="container">
                    <div class="row">
                        <form id="userForm" action="/admin/create-user" method="POST">
                            <input type="hidden" id="userId" name="id">
                            <div class="mt-3">
                                <H3>
                                    CREATE NEW USER
                                </H3>
                            </div>
                            <div class="mb-3 mt-3 col-6">
                                <label for="email" class="form-label">Email:</label>
                                <input type="email" class="form-control" id="email" placeholder="Enter email"
                                    name="email" required>
                            </div>
                            <div class="mb-3 col-6">
                                <label for="password" class="form-label">Password:</label>
                                <input type="password" class="form-control" id="password" placeholder="Enter password"
                                    name="password" required>
                            </div>
                            <div class="mb-3 col-6">
                                <label for="username" class="form-label">UserName:</label>
                                <input type="text" class="form-control" id="username" placeholder="Enter username"
                                    name="username" required>
                            </div>
                            <div class="mb-3 col-6">
                                <label for="role" class="form-label">Role:</label>
                                <select class="form-select" id="role" name="role">
                                    <option value="2" selected>Member</option>
                                    <option value="1">Admin</option>
                                </select>
                            </div>
                            <div class="form-check mb-3">
                                <label class="form-check-label">
                                    <input class="form-check-input" type="checkbox" name="remember"> Remember me
                                </label>
                            </div>
                            <button type="submit" class="btn btn-primary" id="submitBtn">Submit</button>
                            <button type="button" class="btn btn-secondary d-none" id="cancelEdit">Cancel</button>
                        </form>
                    </div>
                </div>
            </div>


            <% const hasUsers=Array.isArray(userlist) && userlist.length> 0; %>
                <div class="container mt-4">
                    <div class="row">
                        <div class="user-infor-container">
                            <div class="table-users mt-3">
                                <h3>Table Users:</h3>
                                <table class="table table-hover table-bordered">
                                    <thead>
                                        <tr>
                                            <th scope="col">ID</th>
                                            <th scope="col">Email</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Role</th>
                                            <th>Actions</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% if (hasUsers) { %>
                                            <% userlist.forEach(function (user, index) { %>
                                                <tr>
                                                    <th scope="row">
                                                        <%= user.id %>
                                                    </th>
                                                    <td>
                                                        <%= user.email %>
                                                    </td>
                                                    <td>
                                                        <%= user.username %>
                                                    </td>
                                                    <td>
                                                        <% if (String(user.roleId)==="1" ) { %>
                                                            Admin
                                                            <% } else { %>
                                                                Member
                                                                <% } %>
                                                    </td>
                                                    <td>
                                                        <button type="button" class="btn btn-warning btn-edit"
                                                            data-id="<%= user.id %>" data-email="<%= user.email %>"
                                                            data-username="<%= user.username %>"
                                                            data-role="<%= user.roleId %>">Edit</button>
                                                        <form action="/admin/delete-user/<%= user.id %>" method="POST">
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } else { %>
                                                        <tr>
                                                            <td colspan="5" class="text-center">No users found.</td>
                                                        </tr>
                                                        <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
        </main>
        <%- include('partials/footer') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                document.addEventListener("DOMContentLoaded", () => {
                    const form = document.getElementById("userForm");
                    const idInput = document.getElementById("userId");
                    const emailInput = document.getElementById("email");
                    const usernameInput = document.getElementById("username");
                    const passwordInput = document.getElementById("password");
                    const roleSelect = document.getElementById("role");
                    const submitBtn = document.getElementById("submitBtn");
                    const cancelBtn = document.getElementById("cancelEdit");

                    const resetForm = () => {
                        form.reset();
                        idInput.value = "";
                        roleSelect.value = "2";
                        form.action = "/admin/create-user";
                        submitBtn.textContent = "Submit";
                        cancelBtn.classList.add("d-none");
                        passwordInput.disabled = false;
                        passwordInput.required = true;
                    };

                    const enterEditMode = ({ id, email, username, role }) => {
                        idInput.value = id;
                        emailInput.value = email;
                        usernameInput.value = username;
                        roleSelect.value = role && role !== "" ? role : "2";
                        form.action = "/admin/edit-user";
                        submitBtn.textContent = "Update";
                        cancelBtn.classList.remove("d-none");
                        passwordInput.value = "";
                        passwordInput.disabled = true;
                        passwordInput.required = false;
                    };

                    document.querySelectorAll(".btn-edit").forEach((btn) => {
                        btn.addEventListener("click", () => {
                            enterEditMode({
                                id: btn.dataset.id,
                                email: btn.dataset.email,
                                username: btn.dataset.username,
                                role: btn.dataset.role,
                            });
                        });
                    });

                    cancelBtn.addEventListener("click", resetForm);
                });
            </script>
</body>

</html>