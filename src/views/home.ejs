            color: #1f1f1f;
        }

        .hero {
            background: linear-gradient(135deg, rgba(17, 17, 17, 0.85), rgba(0, 0, 0, 0.4)),
                url("https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?auto=format&fit=crop&w=1600&q=80") center / cover;
            color: #fff;
            min-height: 70vh;
            display: flex;
            align-items: center;
            text-align: left;
            padding: 80px 0;
        }

        .hero h1 {
            font-size: 3.5rem;
            letter-spacing: 2px;
        }

        .section-title {
            letter-spacing: 0.2em;
            font-weight: 600;
            color: #b48b57;
        }

        .collection-card {
            border: none;
            border-radius: 0;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
